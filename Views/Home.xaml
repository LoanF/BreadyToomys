<Page x:Class="BreadyToomys.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BreadyToomys.Views"
      mc:Ignorable="d" 
      Title="Home">

    <Grid x:Name="homeGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="newOrderButton" Content="NOUVELLE COMMANDE" HorizontalAlignment="Left" Margin="0,784,0,0" VerticalAlignment="Top" Width="450" Background="#FF1BAB06" Height="100" Click="newOrderButton_Click" Grid.ColumnSpan="2" FontFamily="Arial Black" FontSize="24" Foreground="#FFD4E06A"/>
        <Rectangle x:Name="background" HorizontalAlignment="Left" Height="194" Margin="0,590,0,0" Stroke="#FFEE8D3C" VerticalAlignment="Top" Width="450" Grid.ColumnSpan="2" Fill="#FFEE8D3C" StrokeThickness="0"/>
        <Rectangle x:Name="background_Copy" HorizontalAlignment="Left" Height="188" Stroke="#FFEE8D3C" VerticalAlignment="Top" Width="450" Grid.ColumnSpan="2" Fill="#FFEE8D3C" StrokeThickness="0"/>
        <Image HorizontalAlignment="Left" Height="461" Margin="0,188,0,0" VerticalAlignment="Top" Width="450" Source="/Views/Images/burgers.png" Grid.ColumnSpan="2"/>

    </Grid>
</Page>
